<Addin id          = "MonoDevelop.CSharpRepl"
       namespace   = "MonoDevelop.CSharpRepl"
       name        = "C# REPL Pad"
       author      = "Scott Stephens"
       copyright   = "MIT X11"
       url         = "xxx"
       description = "Provides REPL pad for C# language"
	   category    = "??"
       version     = "3.0.5">

	<Runtime>
		<Import assembly = "CSharpRepl.dll"/>
	</Runtime>

	<Dependencies>
		<Addin id="::MonoDevelop.Core" version="3.0.5"/>
		<Addin id="::MonoDevelop.Ide" version="3.0.5"/>
	</Dependencies>
	
	<Extension path = "/MonoDevelop/Ide/Pads">
		<Pad 
			id = "MonoDevelop.CSharpRepl.ReplPad" 
			class = "MonoDevelop.CSharpRepl.ReplPad" 
			_label="ReplPad"
			defaultLayout="*" 
			defaultPlacement = "Bottom" 
		/>
			
	</Extension>

</Addin>